<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_primary_gradient_bg"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="@dimen/item_weather_icon_size"
        android:layout_height="@dimen/item_weather_icon_size"
        android:contentDescription="@string/content_description_weather_icon"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>